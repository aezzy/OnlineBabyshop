<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Online Babyshop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container">
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-danger border-bottom box-shadow mb-3">
                <div class="container">

                    <a class="navbar-brand" asp-area="" asp-controller="Categories" asp-action="ListOfCategories">Online Babyshop</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div id="cart-status" class="nav-item text-black">
                        @await Component.InvokeAsync("ShoppingCartSummary")
                    </div>
                    
                        

                        <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                            <partial name="_LoginPartial" />
                            <ul class="navbar-nav flex-grow-1">
                               

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Categories" asp-action="ListOfCategories">Home</a>
                                 
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Administration" asp-action="Admin">Admin</a>

                                </li>

                            </ul>
                        </div>
                    </div>
</nav>
            <div class="jumbotron">
                <div class="container">
                    <h1>welcome</h1>
                </div>
            </div>
        </header>
        
        <main role="main">
           
            <div class="container">
                
                    @RenderBody()


                
            </div>

        </main>

        

        <footer class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-danger border-top box-shadow mb-3">
            <div class="container">
                &copy; 2020 - WebApplication3 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
